---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class={`max-w-5xl mx-auto ${noPadding ? "px-0" : "px-4"}`}>
  <hr
    class="border-main-base-inverted dark:border-main-base"
    aria-hidden={ariaHidden}
  />
</div>
