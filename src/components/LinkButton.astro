---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  newTab?: boolean;
}

const {
  href,
  className,
  ariaLabel,
  title,
  newTab = false,
  disabled = false,
} = Astro.props;
---

<a
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  class={`group inline-block ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  target={newTab ? "_blank" : "_self"}
>
  <slot />
</a>
