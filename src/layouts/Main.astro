---
import Breadcrumbs from "@components/Breadcrumbs.astro";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Breadcrumbs />
<main
  id="main-content"
  class="base-inverted text-main-base-inverted dark:bg-main-base dark:text-main-base"
>
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>
